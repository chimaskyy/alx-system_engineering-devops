# This script install and configure HAProxy on lb-01 server
# Configures HAProxy to send traffic to web-01 and web-02 servers
# ROundrobin algorithm is used to distribute request
# Ensure that HAProxy can be managed via an init script

#make a backup of the config file
sudo cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Update packages.
sudo apt-get -y update

# Install haproxy
apt-get -y install haproxy

# Configure HAProxy file
printf '%s\n' "
frontend  techinit-frontend
        bind *:80
        mode http
        default_backend techinit-backend" | sudo tee -a /etc/haproxy/haproxy.cfg

printf '%s' "
backend techinit-backend
        balance roundrobin
        server 419991-web-01 54.175.8.50:80 check
        server 419991-web-02 54.237.39.190:80 check" | tee -a /etc/haproxy/haproxy.cfg

# enable management via init script
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

#restart to apply changes
sudo service haproxy restart
